[Unit]
Description=mapserverid
After=network.target

[Service]
Type=simple
User=ericsson
Group=ericsson
ExecStart=/bin/bash -c "/opt/ericsson/python3.7/bin/python3.7 /opt/ericsson/controller/setup/mapserverid.py"
ExecStop=/bin/kill -s HUP $MAINPID
Restart=always

[Install]
WantedBy=multi-user.target