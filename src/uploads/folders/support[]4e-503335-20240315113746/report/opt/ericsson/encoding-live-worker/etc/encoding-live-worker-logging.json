{
    "version": 1,
    "incremental": true,
    "handlers": {
        "stream": {
            "class": "logging.StreamHandler",
            "stream": "ext://sys.stdout"
        },
        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "filename": "/var/log/ericsson/encoding-live-worker/private/config-daemon.log",
            "encoding": "utf8",
            "maxBytes": 5000000,
            "backupCount": 10
        },
        "file_messaging": {
            "class": "logging.handlers.RotatingFileHandler",
            "filename": "/var/log/ericsson/encoding-live-worker/private/config-daemon-messaging.log",
            "encoding": "utf8",
            "maxBytes": 5000000,
            "backupCount": 10
        },
        "syslog": {
            "level" : "INFO",
            "class" : "logging.handlers.SysLogHandler",
            "facility": "local0",			
            "address" : "/dev/log"
        }
    },
    "root": {
        "handlers": [
            "stream",
            "file",
            "syslog"
        ],
        "level": "ERROR"
    },
    "loggers": {
        "application": {
            "level": "INFO",
            "handlers": [
                "stream",
                "file",
                "syslog"
            ]
        },
        "access": {
            "level": "INFO",
            "handlers": [
                "stream",
                "file",
                "syslog"
            ]
        },
        "error": {
            "level": "INFO",
            "handlers": [
                "stream",
                "file",
                "syslog"
            ]
        }
    }
}

