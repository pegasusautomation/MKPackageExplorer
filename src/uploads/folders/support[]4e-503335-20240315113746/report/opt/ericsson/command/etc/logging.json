{
    "version": 1,
    "disable_existing_loggers": 1,
    "formatters": {
        "simple": {
            "format": "%(levelname)s %(message)s"
        },
        "standard": {
            "format": "%(asctime)s [%(levelname)s] %(name)s: %(message)s"
        },
        "verbose": {
            "format": "%(asctime)s [%(levelname)s] %(name)s %(module)s %(process)d %(thread)d %(message)s"
        },
        "void": {
            "format": ""
        },
        "syslog": {
            "format": "command-api[%(pid)s]: @cee:{\"type\":\"transaction\",\"topic\":\"api\",\"c-ip\":\"%(h)s\",\"cs-method\":\"%(m)s\",\"cs-uri\":\"%(p)s\",\"sc-status\":\"%(s)s\",\"sc-bytes\":\"%(b)s\",\"cs-bytes\":\"%(i)s\",\"cs\":\"%(a)s\",\"time-taken\":\"%(tt)s\"}"
        }

    },
    "handlers": {
        "default": {
            "level":"INFO",
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "standard",
            "filename": "/var/log/ericsson/command/private/command-api-trace.log",
            "encoding": "utf8"
        },
        "console": {
            "level":"INFO",
            "class":"logging.StreamHandler",
            "formatter": "void",
            "stream": "ext://sys.stdout"
        },
        "access": {
            "level":"INFO",
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "standard",
            "filename": "/var/log/ericsson/command/private/command-api-access.log",
            "encoding": "utf8"
        },
        "error": {
            "level":"DEBUG",
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "standard",
            "filename": "/var/log/ericsson/command/private/command-api-error.log",
            "encoding": "utf8"
        },
        "null": {
            "level":"INFO",
            "class":"logging.NullHandler",
            "formatter": "void"
        },  
        "access_syslog": {
            "level":"DEBUG",
            "class": "logging.handlers.SysLogHandler",
            "facility": "local0",
            "formatter": "syslog",
            "address": "/dev/log"
        }        
    },
    "loggers": {
        "": {
            "handlers": ["default"],
            "level": "INFO"
        },
        "envivio.command": {
            "handlers": ["error"],
            "level": "INFO",
            "propagate": false
        },
        "tornado.application": {
            "handlers": ["console", "error"],
            "level": "INFO",
            "propagate": false
        },
        "tornado.access": {
            "handlers": ["null"],
            "level": "INFO",
            "propagate": false
        },
        "command.access": {
            "handlers": ["access_syslog"],
            "level": "INFO",
            "propagate": false
        }        
    }
}
