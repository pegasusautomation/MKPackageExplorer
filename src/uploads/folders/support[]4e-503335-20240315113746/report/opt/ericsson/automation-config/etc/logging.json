{
    "version": 1,
    "disable_existing_loggers": 1,
    "formatters": {
        "simple": {
            "format": "%(levelname)s %(message)s"
        },
        "verbose": {
            "()": "ericsson.automation.config.logger.MicroServiceFormatter",
            "format": "%(asctime)s [%(levelname)s] %(name)s %(module)s %(process)d %(threadName)s %(message)s"
        },
        "cee": {
            "()": "ericsson.automation.config.logger.CeeFormatter",
            "fields": {
                "time": "asctime",
                "level": "levelname",
                "loggername": "name",
                "module": "module",
                "process": "process",
                "threadName": "threadName",
                "message": "message",
                "serviceid": "serviceid",
                "servicename": "servicename",
                "client": "client",
                "request": "request"
            }
        }
    },
    "handlers": {
        "none": {
            "class": "logging.NullHandler"
        },
        "standard_output": {
            "class": "logging.StreamHandler",
            "formatter": "verbose",
            "level": "INFO",
            "stream": "ext://sys.stdout"
        },
        "default": {
            "level": "INFO",
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "verbose",
            "filename": "/var/log/ericsson/automation-config/private/automation-config.log",
            "maxBytes": 1048576,
            "backupCount": 2,
            "encoding": "utf8"
        },
        "access": {
            "level": "INFO",
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "simple",
            "filename": "/var/log/ericsson/automation-config/private/automation-config-access.log",
            "maxBytes": 1048576,
            "backupCount": 2,
            "encoding": "utf8"
        },
        "error": {
            "level": "INFO",
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "verbose",
            "filename": "/var/log/ericsson/automation-config/private/automation-config-error.log",
            "maxBytes": 1048576,
            "backupCount": 2,
            "encoding": "utf8"
        }
    },
    "root": {
        "handlers": [
            "none"
        ],
        "level": "INFO"
    },
    "loggers": {
        "automation_config": {
            "handlers": [
                "default"
            ],
            "propagate": false
        },
        "automation_config.error": {
            "handlers": [
                "error"
            ],
            "propagate": false
        },
        "automation_config.access": {
            "handlers": [
                "access"
            ],
            "propagate": false
        }
    }
}
