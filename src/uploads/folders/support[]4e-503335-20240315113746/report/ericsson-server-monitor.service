[Unit]
Description=ericsson-server-monitor
After=network.target

[Service]
Type=simple
User=ericsson
Group=ericsson
# BEGINNING OF BZ47235
PermissionsStartOnly=true
ExecStartPre=/usr/bin/mkdir -p /var/log/ericsson/server-monitor/private
ExecStartPre=/usr/bin/chown ericsson: /var/log/ericsson/server-monitor/private
# END OF BZ47235
Environment=PYTHONDONTWRITEBYTECODE="True"
ExecStart=/bin/bash -c     "cd /opt/ericsson/server-monitor/bin;source activate;./ericsson-server-monitor --logging /opt/ericsson/server-monitor/etc/logging.json --conf /opt/ericsson/server-monitor/etc/server-monitor.ini >> /var/log/ericsson/server-monitor/private/console.log 2>&1"
ExecStartPost=/bin/bash -c "ps aux|egrep -e './ericsson-server-monitor'|grep -v grep|awk '{print $2}'>/var/opt/ericsson/server-monitor/ericsson-server-monitor.pid"
ExecReload=/bin/bash -c    "/bin/pkill -15 -F /var/opt/ericsson/server-monitor/ericsson-server-monitor.pid; sleep 1"
ExecReload=/bin/bash -c    "cd /opt/ericsson/server-monitor/bin;source activate;./ericsson-server-monitor --logging /opt/ericsson/server-monitor/etc/logging.json --conf /opt/ericsson/server-monitor/etc/server-monitor.ini >> /var/log/ericsson/server-monitor/private/console.log 2>&1;"
ExecReload=/bin/bash -c    "ps aux|egrep -e './ericsson-server-monitor'|grep -v grep|awk '{print $2}'>/var/opt/ericsson/server-monitor/ericsson-server-monitor.pid"
ExecStop=/bin/bash -c      "/bin/pkill -15 -F /var/opt/ericsson/server-monitor/ericsson-server-monitor.pid; sleep 1"
ExecStopPost=/bin/bash -c  "rm -f /var/opt/ericsson/server-monitor/ericsson-server-monitor.pid"
Restart=always

[Install]
WantedBy=multi-user.target
